<Page xmlns="http://www.nativescript.org/tns.xsd"
      navigatedTo="pageNavigatedTo">
    <Page.actionBar>
        <ActionBar class="actionbar">
            <StackLayout orientation="horizontal"
                ios:horizontalAlignment="center"
                android:horizontalAlignment="left">
            	<Label text="Register Device" class="actionbar__title" />
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
    
    <GridLayout rows="auto, auto, auto, *">
        <StackLayout class="spacer"></StackLayout>
        
        <StackLayout row="1">
            <Label text="&#xf139;" class="icon icon--large" />
        </StackLayout>
        
        <StackLayout row="2" class="spacer"></StackLayout>
        
    	<StackLayout orientation="vertical" row="3">
            <Label text="Enter Device IP" class="label"></Label>
			<TextField text="{{ ipAddress }}" class="input" />
            
            <Label text="Enter Device Name" class="label"></Label>
            <TextField text="{{ displayName }}" class="input" />
            
            <Border class="border border--connect">
            	<Button text="Connect" class="button button--connect" tap="onAddDevice"></Button>
            </Border>
  		</StackLayout>
    </GridLayout>
</Page>
