<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      loaded="pageLoaded">
	<Page.actionBar>
        <ActionBar class="actionbar">
            <StackLayout orientation="horizontal"
            	ios:horizontalAlignment="center"
            	android:horizontalAlignment="left">
            	<Label text="Devices" class="actionbar__title" />
          	</StackLayout>
            
            <ActionItem ios.position="right" text="Register" tap="onRegisterTap" />
        </ActionBar>
	</Page.actionBar>
    
    <GridLayout rows="auto, auto, auto, *">
        <StackLayout class="spacer"></StackLayout>
        
        <StackLayout row="1">
            <Label text="&#xf138;" class="icon icon--large" />
        </StackLayout>
        
        <StackLayout class="spacer" row="2"></StackLayout>
        
        <ListView class="listview" row="3" items="{{ items }}" itemTap="listViewItemTap">
            <ListView.itemTemplate>
                <GridLayout class="listview__tem">
                    <Label text="{{ info }}" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>