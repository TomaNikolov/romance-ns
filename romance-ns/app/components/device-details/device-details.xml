<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      navigatedTo="pageNavigatedTo">
	<Page.actionBar>
        <ActionBar class="actionbar">
            <StackLayout orientation="horizontal"
            	ios:horizontalAlignment="center"
            	android:horizontalAlignment="left">
            	<Label text="Device Details" class="actionbar__title" />
          	</StackLayout>
        </ActionBar>
	</Page.actionBar>
    
	<GridLayout rows="auto, auto, auto, *">
        <StackLayout class="spacer"></StackLayout>
        
        <StackLayout row="1">
            <Label text="&#xf13d;" class="icon icon--large" />
        </StackLayout>
        
        <StackLayout class="spacer" row="2"></StackLayout>
        
    	<StackLayout row="3">
            <Label text="{{ displayName }}" />
            <ListView class="listview" row="3" items="{{ items }}">
                <ListView.itemTemplate>
                	<StackLayout row="3">
                        <Label text="{{ info }}" />
                        <Label text="{{ currentValue }}" />
                  	</StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </GridLayout>
</Page>